<h2>Bem Vindo</h2>
<%= form_for(resource, as: resource_name, :html => {:class => 'm-t', 'role' => 'form'}, url: session_path(resource_name)) do |f| %>
  <div class="form-group">
    <%= f.email_field :email, class:"form-control", placeholder:"Email", autofocus: true %>
  </div>

  <div class="form-group">
    <%= f.password_field :password, class:"form-control", placeholder:"Senha", autocomplete: "off" %>
  </div>

  <div class="actions">
    <%= f.submit "Log in", class:"btn btn-primary block full-width m-b" %>
  </div>
<% end %>

<%= render "devise/shared/links" %>

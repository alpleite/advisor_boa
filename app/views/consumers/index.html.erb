<div class="row wrapper border-bottom white-bg page-heading">
  <div class="col-lg-10">
    <h2>Cadastro de Clientes</h2>
  </div>

</div>
<div class="wrapper wrapper-content animated fadeInRight">
  <div class="row">
    <div class="col-lg-11">
      <div class="ibox float-e-margins">
        <div class="ibox-title">
          <h5>Dados</h5>
        </div>
        <div class="ibox-content">
          <table class="table">
            <thead>
              <tr>
                <th>#</th>
                <th>Nome</th>
                <th>Telefone</th>
                <th colspan='2'></th>
              </tr>
            </thead>
            <tbody>
              <% @consumers.each do |consumer| %>
              <tr>
                <td><%= consumer.id %></td>
                <td><%= consumer.name %></td>
                <td><%= consumer.phone %></td>
                <td><%= link_to 'Show', consumer %></td>
                <td><%= link_to 'Edit', edit_consumer_path(consumer) %></td>
                <% if false %>
                <td><%= link_to 'Destroy', consumer, method: :delete, data: { confirm: 'Are you sure?' } %></td>
                <% end %>
              </tr>
              <% end %>

            </tbody>
          </table>
          <%= link_to 'Novo Cliente', new_consumer_path, {class: "btn btn-primary"} %>
        </div>
      </div>
    </div>
  </div>

  <% if false %>
  <%= link_to 'Novo Cliente', new_consumer_path, {class: "btn btn-primary"} %>
  <% end %>



</div>




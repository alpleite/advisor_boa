<div class="row wrapper border-bottom white-bg page-heading">
  <div class="col-lg-10">
    <h2>Listando Arquivos do Lote <%=@lote.name%></h2>
  </div>
  <div class="col-lg-2">

  </div>
</div>
<div class="wrapper wrapper-content animated fadeInRight">
  <div class="row">
    <div class="col-lg-11">
      <div class="ibox float-e-margins">
        <div class="ibox-title">
          <h5>Dados</h5>
        </div>
        <div class="ibox-content">
          <table class="table">
            <thead>
              <tr>
                <th>Nome</th>
              </tr>
            </thead>
            <tbody>
                <% @files.each do |file| %>
                <tr>
                  <td><%= file.name %></td>
                  <td>
                    <%= link_to "Download XLS", data_pdfs_path(format: "xls", id:"#{@lote.token}", pdf_file_id:"#{file.pdf_file_id}"), :class=>"btn btn-w-m btn-default"%>
                  </td>
                </tr>
                <% end %>
              </tbody>
          </table>
        </div>
      </div>
    </div>
  </div>
  
</div>

<% if false %>

<p id="notice"><%= notice %></p>
<table>
  <thead>
    <tr>
      <th>Listando Arquivos do Lote <%=@lote.name%></th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @files.each do |file| %>
      <tr>
        <td><%= file.name %></td>
        <%if false%>
        <td><%= link_to 'Show', data_pdf %></td>
        <td><%= link_to 'Edit', edit_data_pdf_path(data_pdf) %></td>
        <td><%= link_to 'Destroy', data_pdf, method: :delete, data: { confirm: 'Are you sure?' } %></td>
        <%end%>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<% end %>



<div class="row wrapper border-bottom white-bg page-heading">
  <div class="col-lg-10">
    <h2>Cadastro de Lotes</h2>
  </div>
  <div class="col-lg-2">

  </div>
</div>
<div class="wrapper wrapper-content animated fadeInRight">
  <div class="row">
    <div class="col-lg-11">
      <div class="ibox float-e-margins">
        <div class="ibox-title">
          <h5>Dados</h5>
        </div>
        <div class="ibox-content">
          <table class="table">
            <thead>
            <tr>
              <th>Name</th>
              <th>Consumers</th>
              <th>Status</th>
              <th>Data de Criação</th>
              <th>Data Atualização</th>
              <% if false %>
              <th colspan="3"></th>
              <% end %>
            </tr>
            </thead>
            <tbody>
              <% @allotments.each do |allotment| %>
                <tr>
                  <td><%= link_to allotment.name, "/pdf_files?id=#{allotment.token}"   %></td>
                  <td><%= allotment.consumer_name %></td>
                  <td><%= allotment.status %></td>
                  <td><%= allotment.created_at %></td>
                  <td><%= allotment.updated_at %></td>
                  <% if false %>
                  <td><%= link_to 'Show', allotment %></td>
                  <td><%= link_to 'Edit', edit_allotment_path(allotment) %></td>
                  <td><%= link_to 'Destroy', allotment, method: :delete, data: { confirm: 'Are you sure?' } %></td>
                  <% end %>
                </tr>
              <% end %>
            </tbody>
          </table>
        </div>
      </div>
    </div>
  </div>
  <%= link_to 'New Lote', new_allotment_path, {class: "btn btn-w-m btn-default"} %>
</div>



<div class="row wrapper border-bottom white-bg page-heading">
  <div class="col-lg-10">
    <h2>Cadastro de Lotes</h2>
  </div>
  <div class="col-lg-2">

  </div>
</div>
<div class="wrapper wrapper-content animated fadeInRight">
  <div class="row">
    <div class="col-lg-12">
      <div class="ibox">
        <div class="ibox-title">
          <h5>Wizard criação de lote</h5>
        </div>
        <div class="ibox-content">
          <div class="wizard-big wizard clearfix" role="application" novalidate="novalidate">
            <div class="steps clearfix">
              <ul role="tablist">
                <li role="tab" class="disabled" aria-disabled="true">
                  <a aria-controls="form-p-0" href="#" id="form-t-0">
                    <span class="current-info audible">current step: </span>
                    <span class="number">1.</span> Criação do lote
                  </a>
                </li>
                <li role="tab" class="first current" aria-disabled="false" aria-selected="true">
                  <a aria-controls="form-p-1" href="#" id="form-t-1">
                    <span class="number">2.</span> Envio de Arquivos PDF
                  </a>
                </li>
                <li role="tab" class="disabled" aria-disabled="true">
                  <a aria-controls="form-p-2" href="#" id="form-t-2">
                    <span class="number">3.</span>Processamento
                  </a>
                </li>
              </ul>
            </div>
            <div class="content clearfix">    
              <h1 id="form-h-0" tabindex="-1" class="title current">Lote</h1>
              <fieldset id="form-p-1" role="tabpanel" aria-labelledby="form-h-0" class="body current" aria-hidden="false">
                <h2>Arquivos do lote: <%= @lote.name %></h2>
                <div class="row">
                  <div class="col-lg-12">
                    <div class="ibox float-e-margins">
                      <div class="ibox-title">
                        <h5>Dados</h5>
                      </div>
                      <div class="ibox-content">
                        <table class="table">
                          <thead>
                          <tr>
                            <th>Name</th>
                            <th>Lote</th>
                            <th colspan="3"></th>
                          </tr>
                          </thead>
                          <tbody>
                          <% @pdf_files.each do |pdf_file| %>
                          <tr>
                            <td><%= link_to pdf_file.name, attachment_url(pdf_file, :pdf_file, filename: pdf_file.name)%></td>
                            <td><%= pdf_file.lote_name %></td>
                            <% if false %>
                            <td><%= link_to 'Show', pdf_file %></td>
                            <td><%= link_to 'Edit', edit_pdf_file_path(pdf_file) %></td>
                            <td><%= link_to 'Destroy', pdf_file, method: :delete, data: { confirm: 'Are you sure?' } %></td>
                            <% end %>
                          </tr>
                          <% end %>
                        </tbody>
                        </table>
                      </div>
                    </div>
                  </div>
                </div>
                <%= link_to 'Novo PDF', new_pdf_file_path(id:@lote.token), :class=>"btn btn-w-m btn-default" %>
                <% if  @pdf_files.count > 0 %>
                <%= link_to 'Processar PDF', process_pdf_index_path(id:@lote.token), :class=>"btn btn-w-m btn-warning" %>
                <% end %>
              </div>
            </fieldset>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
</div>



